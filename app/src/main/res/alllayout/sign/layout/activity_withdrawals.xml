<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <include layout="@layout/view_nav"></include>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="28dip"
            android:textSize="12sp"
            android:textColor="#999999"
            android:text="提现金额"
            android:paddingLeft="12dip"
            android:gravity="center_vertical"
            android:background="#f2f2f2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:gravity="center_vertical">
            <TextView
                android:text="¥"
                android:textColor="#333333"
                android:textSize="25sp"
                android:layout_marginLeft="12dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/ed_withdrawals_money"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:inputType="number"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:textSize="25sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_withdrawals_lastmoney"
            android:layout_width="match_parent"
            android:layout_height="28dip"
            android:textSize="12sp"
            android:textColor="#999999"
            android:text="可用余额: 0"
            android:paddingRight="12dip"
            android:gravity="center_vertical|right"
            android:background="#f2f2f2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="28dip"
            android:textSize="12sp"
            android:textColor="#999999"
            android:text="提现至"
            android:paddingLeft="12dip"
            android:gravity="center_vertical"
            android:background="#f2f2f2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dip"
                    android:src="@mipmap/ic_alipay"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:layout_marginStart="12dip"
                android:background="#999999">

            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="70dip"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="12sp"
                    android:layout_marginLeft="12dip"
                    android:text="支付宝账号"/>
                <EditText
                    android:id="@+id/ed_alipay_account"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:layout_marginLeft="12dip"
                    android:layout_marginRight="12dip" />
            </LinearLayout>
            <View
                android:id="@+id/view_alipay_account"
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:layout_marginStart="12dip"
                android:background="#999999">

            </View>
            <LinearLayout
                android:id="@+id/layout_alipay_name"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="70dip"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="12sp"
                    android:layout_marginLeft="12dip"
                    android:text="真实姓名"/>
                <EditText
                    android:id="@+id/ed_alipay_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:layout_marginLeft="12dip"
                    android:layout_marginRight="12dip" />
            </LinearLayout>
            <View
                android:id="@+id/view_alipay_name"
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:layout_marginStart="12dip"
                android:background="#999999">

            </View>
            <LinearLayout
                android:id="@+id/layout_alipay_code"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="70dip"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="12sp"
                    android:layout_marginLeft="12dip"
                    android:text="验证码"/>
                <EditText
                    android:id="@+id/ed_alipay_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:layout_marginLeft="12dip"
                    android:layout_marginRight="12dip" />
                <Button
                    android:id="@+id/btn_alipay_getvcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    android:text="获取验证码"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="28dip"
            android:textSize="12sp"
            android:textColor="#999999"
            android:text="请以实际到账时间为准  参见快活钱包使用规则"
            android:paddingLeft="12dip"
            android:gravity="center_vertical"
            android:background="#f2f2f2"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_withdrawals_commit"
        android:text="提现"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_rounded_solid_green"
        android:textColor="@android:color/white"
        android:layout_marginEnd="16dip"
        android:layout_marginStart="16dip"
        android:layout_marginBottom="20dip"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>