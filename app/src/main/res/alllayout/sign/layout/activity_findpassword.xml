<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/view_nav"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dip"
        android:layout_marginEnd="12dip"
        android:layout_marginTop="10dip"
        android:orientation="vertical">
        <LinearLayout
            android:background="@drawable/shape_rounded_corner_gray"
            android:layout_marginBottom="6dip"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dip">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dip"
                android:layout_marginStart="16dip"
                android:textSize="14sp"
                android:textColor="#999999"
                android:text="手机号码"/>
            <com.renyu.commonlibrary.views.ClearEditText
                android:id="@+id/et_findpwd_phone"
                android:layout_marginEnd="16dip"
                android:background="@android:color/transparent"
                android:textSize="14sp"
                android:textColor="#999999"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/shape_rounded_corner_gray"
            android:layout_marginTop="6dip"
            android:layout_marginBottom="6dip"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dip">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dip"
                android:layout_marginStart="16dip"
                android:textSize="14sp"
                android:textColor="#999999"
                android:text="验证码    "/>
            <com.renyu.commonlibrary.views.ClearEditText
                android:id="@+id/et_findpwd_vcode"
                android:layout_weight="1"
                android:layout_marginEnd="16dip"
                android:background="@android:color/transparent"
                android:textSize="14sp"
                android:textColor="#999999"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/btn_findpwd_getvcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:text="获取验证码"/>
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/shape_rounded_corner_gray"
            android:layout_marginTop="6dip"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dip">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dip"
                android:layout_marginStart="16dip"
                android:textSize="14sp"
                android:textColor="#999999"
                android:text="登录密码"/>
            <com.renyu.commonlibrary.views.ClearEditText
                android:id="@+id/et_findpwd_pwd"
                android:layout_marginEnd="16dip"
                android:background="@android:color/transparent"
                android:textSize="14sp"
                android:textColor="#999999"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/findpwd_commit"
        android:layout_marginTop="80dip"
        android:layout_marginStart="12dip"
        android:layout_marginEnd="12dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:background="@drawable/shape_rounded_solid_orange"
        android:text="立即修改"/>
</LinearLayout>