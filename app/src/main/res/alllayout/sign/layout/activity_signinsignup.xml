<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_signinsignup">
    <ImageView
        android:src="@mipmap/ic_signinsignup_logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="205dip"
        android:layout_width="75dip"
        android:layout_height="75dip" />
    <ImageView
        android:src="@mipmap/ic_signinsignup_slogan"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">
        <Button
            android:id="@+id/btn_signinsignup_signin"
            android:text="登录"
            android:background="@drawable/shape_rounded_solid_orange"
            android:textColor="@android:color/white"
            android:layout_marginEnd="16dip"
            android:layout_marginStart="16dip"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_signinsignup_signup"
            android:text="注册"
            android:background="@drawable/shape_rounded_corner_green"
            android:textColor="@color/colorPrimary"
            android:layout_marginEnd="16dip"
            android:layout_marginStart="16dip"
            android:layout_marginTop="12dip"
            android:layout_marginBottom="45dip"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>