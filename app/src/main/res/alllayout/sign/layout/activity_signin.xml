<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/layout_signin_rootview"
    android:background="@android:color/white">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dip"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_launcher"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dip"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_signin_slogan"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dip"
            android:layout_marginEnd="12dip"
            android:layout_marginBottom="20dip"
            android:orientation="vertical">
            <LinearLayout
                android:background="@drawable/shape_rounded_corner_gray"
                android:layout_marginBottom="6dip"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dip">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dip"
                    android:layout_marginStart="16dip"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:text="手机号码"/>
                <com.renyu.commonlibrary.views.ClearEditText
                    android:id="@+id/signin_phone"
                    android:layout_marginEnd="16dip"
                    android:background="@android:color/transparent"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/shape_rounded_corner_gray"
                android:layout_marginTop="6dip"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dip">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dip"
                    android:layout_marginStart="16dip"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:text="登录密码"/>
                <com.renyu.commonlibrary.views.ClearEditText
                    android:id="@+id/signin_pwd"
                    android:layout_marginEnd="16dip"
                    android:background="@android:color/transparent"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dip"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_findpwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dip"
                android:textSize="13sp"
                android:textColor="@color/colorPrimary"
                android:background="@android:color/transparent"
                android:text="忘记密码"/>
            <View
                android:background="@color/colorPrimary"
                android:layout_width="1dip"
                android:layout_height="10dip">

            </View>
            <Button
                android:id="@+id/btn_signin_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_marginStart="10dip"
                android:textColor="@color/colorPrimary"
                android:background="@android:color/transparent"
                android:text="注册账户"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_signin_signin"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="16sp"
            android:text="登录"/>
    </LinearLayout>
</LinearLayout>