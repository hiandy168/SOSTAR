<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_signup_rootview"
    android:background="@android:color/white">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dip"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_signinsignup_logo"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dip"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_signin_slogan"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dip"
            android:layout_marginEnd="12dip"
            android:layout_marginBottom="5dip"
            android:orientation="vertical">
            <LinearLayout
                android:background="@drawable/shape_rounded_corner_gray"
                android:layout_marginBottom="6dip"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dip">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dip"
                    android:layout_marginStart="16dip"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:text="手机号码"/>
                <com.renyu.commonlibrary.views.ClearEditText
                    android:id="@+id/signup_phone"
                    android:layout_marginEnd="16dip"
                    android:background="@android:color/transparent"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/shape_rounded_corner_gray"
                android:layout_marginTop="6dip"
                android:layout_marginBottom="6dip"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dip">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dip"
                    android:layout_marginStart="16dip"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:text="验证码    "/>
                <com.renyu.commonlibrary.views.ClearEditText
                    android:id="@+id/signup_vcode"
                    android:layout_weight="1"
                    android:layout_marginEnd="16dip"
                    android:background="@android:color/transparent"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <Button
                    android:id="@+id/btn_signup_getvcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:text="获取验证码"/>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/shape_rounded_corner_gray"
                android:layout_marginTop="6dip"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dip">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dip"
                    android:layout_marginStart="16dip"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:text="登录密码"/>
                <com.renyu.commonlibrary.views.ClearEditText
                    android:id="@+id/signup_pwd"
                    android:layout_marginEnd="16dip"
                    android:background="@android:color/transparent"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/btn_signup_protocal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#999999"
            android:layout_marginEnd="16dip"
            android:layout_marginStart="16dip"
            android:layout_marginBottom="32dip"
            android:text="点击注册即表示你同意《开工啦用户服务协议》"/>
        <Button
            android:id="@+id/btn_signup_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dip"
            android:textColor="@color/colorPrimary"
            android:background="@android:color/transparent"
            android:text="已有账号登录"/>
        <Button
            android:id="@+id/btn_signup"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="16sp"
            android:text="注册"/>
    </LinearLayout>
</LinearLayout>