<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@android:color/white">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dip"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_launcher"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dip"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_signin_slogan"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="12dip"
        android:layout_marginEnd="12dip"
        android:gravity="bottom">
        <LinearLayout
            android:id="@+id/layout_state_employer"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/shape_rounded_corner_green">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_customerstate_boss"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginStart="16dip"
                android:text="我是雇主，我要发单"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_state_employee"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:orientation="horizontal"
            android:layout_marginTop="16dip"
            android:layout_marginBottom="55dip"
            android:gravity="center"
            android:background="@drawable/shape_rounded_corner_green">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_customerstate_staff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginStart="16dip"
                android:text="我是雇员，我要干活"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>