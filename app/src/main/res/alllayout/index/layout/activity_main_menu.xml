<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:clickable="true"
    android:background="#f2f2f2"
    android:layout_marginRight="-64dip"
    android:id="@+id/main_menu_layout">
    <include layout="@layout/view_nav"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="195dip"
                android:background="@color/colorPrimary" >
                <com.facebook.drawee.view.SimpleDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/iv_main_menu_avatar"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_marginTop="20dip"
                    android:layout_centerHorizontal="true"
                    fresco:roundedCornerRadius="10dp"
                    fresco:roundingBorderWidth="1dp"
                    fresco:roundingBorderColor="#10cc84"
                    fresco:placeholderImage="@mipmap/ic_avatar_large"
                    fresco:placeholderImageScaleType="centerCrop"
                    fresco:retryImage="@mipmap/ic_avatar_large"
                    fresco:retryImageScaleType="focusCrop"
                    fresco:failureImage="@mipmap/ic_avatar_large"
                    fresco:failureImageScaleType="focusCrop"/>
                <LinearLayout
                    android:id="@+id/layout_main_menu_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="13dip"
                    android:layout_below="@id/iv_main_menu_avatar"
                    android:layout_centerHorizontal="true"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tv_main_menu_name"
                        android:textColor="@android:color/white"
                        android:textSize="13sp"
                        android:layout_marginEnd="8dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_main_menu_auth"
                        android:textColor="@android:color/white"
                        android:textSize="13sp"
                        android:layout_marginStart="8dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/iv_main_menu_auth"
                    android:layout_alignBottom="@id/layout_main_menu_info"
                    android:layout_toRightOf="@id/layout_main_menu_info"
                    android:layout_marginBottom="-4dip"
                    android:layout_marginStart="5dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_myauth"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/tv_main_menu_evaluatelevel"
                            android:text="0"
                            android:textSize="27sp"
                            android:textColor="@android:color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="星级评分"
                            android:textSize="11sp"
                            android:paddingBottom="15dip"
                            android:textColor="@android:color/white"
                            android:layout_marginTop="4dip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@mipmap/bg_main_menu_receive_order"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/tv_main_menu_order"
                            android:text="0"
                            android:textSize="27sp"
                            android:textColor="@android:color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_main_menu_order_desp"
                            android:text="已接单"
                            android:textSize="11sp"
                            android:paddingBottom="15dip"
                            android:textColor="@android:color/white"
                            android:layout_marginTop="4dip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/tv_main_menu_closerate"
                            android:text="0"
                            android:textSize="27sp"
                            android:textColor="@android:color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="完成率(%)"
                            android:textSize="11sp"
                            android:paddingBottom="15dip"
                            android:textColor="@android:color/white"
                            android:layout_marginTop="4dip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="16dip"
                android:background="#f2f2f2">

            </View>
            <android.support.v7.widget.GridLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                app:columnCount="3"
                app:rowCount="1"
                android:id="@+id/main_menu_grid"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="90dip">
                <LinearLayout
                    android:id="@+id/layout_main_menu_myorder"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_myorder"/>
                    <TextView
                        android:text="我的订单"
                        android:layout_marginTop="11dip"
                        android:textColor="#333333"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_main_menu_wealth"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_mywallet"/>
                    <TextView
                        android:text="钱包"
                        android:layout_marginTop="11dip"
                        android:textColor="#333333"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/layout_main_menu_message"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/layout_inner_main_menu_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_centerInParent="true">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_mymessage"/>
                        <TextView
                            android:text="消息中心"
                            android:layout_marginTop="11dip"
                            android:textColor="#333333"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_main_menu_message"
                        android:layout_alignLeft="@id/layout_inner_main_menu_message"
                        android:layout_width="15dip"
                        android:layout_height="15dip"
                        android:visibility="invisible"
                        android:gravity="center"
                        android:textSize="10sp"
                        android:textColor="@android:color/white"
                        android:layout_marginStart="32dip"
                        android:layout_marginTop="13dip"
                        android:background="@drawable/shape_rounded_solid_red"/>
                </RelativeLayout>
            </android.support.v7.widget.GridLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="16dip"
                android:background="#f2f2f2">

            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@android:color/white">
                <LinearLayout
                    android:id="@+id/layout_main_menu_mycenter_info"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dip"
                        android:src="@mipmap/ic_mycenter_info"/>
                    <TextView
                        android:id="@+id/tv_main_menu_mycenter_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="9dip"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:text="个人资料"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dip"
                        android:src="@mipmap/ic_arrow_gray_right"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:layout_marginStart="12dip"
                    android:background="#999999">

                </View>
                <LinearLayout
                    android:id="@+id/layout_main_menu_mycenter_auth"
                    android:layout_width="match_parent"
                    android:layout_height="45dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dip"
                        android:src="@mipmap/ic_mycenter_auth"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="9dip"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:text="认证信息"/>
                    <TextView
                        android:id="@+id/tv_main_menu_auth2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:layout_marginEnd="9dip"
                        android:textSize="14sp"
                        android:textColor="#999999"
                        android:text="未认证"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dip"
                        android:src="@mipmap/ic_arrow_gray_right"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:layout_marginStart="12dip"
                    android:background="#999999">

                </View>
                <LinearLayout
                    android:id="@+id/layout_main_menu_mycenter_area"
                    android:layout_width="match_parent"
                    android:layout_height="45dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dip"
                        android:src="@mipmap/ic_mycenter_location"/>
                    <TextView
                        android:id="@+id/tv_main_menu_mycenter_area_desp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="9dip"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:text="接单范围"/>
                    <TextView
                        android:id="@+id/tv_main_menu_mycenter_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:layout_marginEnd="9dip"
                        android:textSize="14sp"
                        android:textColor="#999999"
                        android:text="0公里"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dip"
                        android:src="@mipmap/ic_arrow_gray_right"/>
                </LinearLayout>
                <View
                    android:id="@+id/layout_main_menu_mycenter_fav_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:layout_marginStart="12dip"
                    android:background="#999999">

                </View>
                <LinearLayout
                    android:id="@+id/layout_main_menu_mycenter_fav"
                    android:layout_width="match_parent"
                    android:layout_height="45dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dip"
                        android:src="@mipmap/ic_mycenter_fav"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="9dip"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:text="收藏"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dip"
                        android:src="@mipmap/ic_arrow_gray_right"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="16dip"
                    android:background="#f2f2f2">

                </View>
                <LinearLayout
                    android:id="@+id/layout_main_menu_mycenter_settings"
                    android:layout_width="match_parent"
                    android:layout_height="45dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dip"
                        android:src="@mipmap/ic_mycenter_setting"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="9dip"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:text="通用设置"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dip"
                        android:src="@mipmap/ic_arrow_gray_right"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="16dip"
                    android:background="#f2f2f2">

                </View>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>