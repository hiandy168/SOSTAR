<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/view_nav"></include>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#999999">

        </View>
        <View
            android:layout_width="match_parent"
            android:layout_height="16dip">

        </View>
        <ImageView
            android:id="@+id/iv_orderprocess"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_orderprocess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/layout_orderprocess_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@android:color/white"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dip"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:text="工资共计"/>
                <TextView
                    android:id="@+id/tv_orderprocess_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dip"
                    android:textSize="14sp"
                    android:textColor="#333333" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:layout_marginStart="12dip"
                android:background="#999999">

            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dip"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:text="小费共计"/>
                <TextView
                    android:id="@+id/tv_orderprocess_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dip"
                    android:textSize="14sp"
                    android:textColor="#333333" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_orderprocess_commit"
            android:background="@drawable/shape_rounded_solid_green"
            android:textColor="@android:color/white"
            android:layout_marginTop="12dip"
            android:layout_marginEnd="16dip"
            android:layout_marginStart="16dip"
            android:layout_marginBottom="20dip"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_orderprocess_hint"
            android:visibility="gone"
            android:layout_marginStart="20dip"
            android:layout_marginEnd="20dip"
            android:layout_marginBottom="20dip"
            android:textSize="10sp"
            android:textColor="#999999"
            android:drawableLeft="@mipmap/ic_order_tips"
            android:drawablePadding="12dip"
            android:text="订单完成后，请立即确认并支付，在1小时内未确认，系统将自动完成本次支付，请确认。 支付有问题 >"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>