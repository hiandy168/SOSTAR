<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_adapter_employeelist"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="60dip">
        <RelativeLayout
            android:layout_marginLeft="16dip"
            android:layout_marginRight="12dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.facebook.drawee.view.SimpleDraweeView
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:id="@+id/iv_adapter_employeelist_avatar"
                android:layout_width="40dip"
                android:layout_height="40dip"
                fresco:roundedCornerRadius="5dp"
                fresco:placeholderImage="@mipmap/ic_avatar"
                fresco:placeholderImageScaleType="centerCrop"
                fresco:retryImage="@mipmap/ic_avatar"
                fresco:retryImageScaleType="centerCrop"
                fresco:failureImage="@mipmap/ic_avatar"
                fresco:failureImageScaleType="centerCrop" />
            <LinearLayout
                android:id="@+id/layout_adapter_employeelist_oper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_rounded_corner_green"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_adapter_employeelist_oper1"
                    android:text="接受"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:layout_width="50dip"
                    android:layout_height="30dip" />
                <View
                    android:id="@+id/v_adapter_employeelist_oper1"
                    android:layout_width="0.5dip"
                    android:layout_height="30dip"
                    android:background="@color/colorPrimary"></View>
                <TextView
                    android:id="@+id/tv_adapter_employeelist_oper2"
                    android:text="拒绝"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:layout_width="50dip"
                    android:layout_height="30dip" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_adapter_employeelist_avatar"
                android:layout_toLeftOf="@id/layout_adapter_employeelist_oper"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_adapter_employeelist_name"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#333333"/>
                <TextView
                    android:id="@+id/tv_adapter_employeelist_desp"
                    android:layout_marginTop="4dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:layout_marginRight="10dip" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="#cccccc">

    </View>
</LinearLayout>
