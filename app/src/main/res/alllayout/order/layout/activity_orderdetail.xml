<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2">
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.bigkoo.convenientbanner.ConvenientBanner
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/vp_orderdetail"
                    android:layout_width="match_parent"
                    android:layout_height="176dip"
                    app:canLoop="true" />
                <LinearLayout
                    android:id="@+id/layout_orderdetail_info1"
                    android:layout_below="@id/vp_orderdetail"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dip"
                    android:layout_marginStart="12dip"
                    android:layout_marginTop="12dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_rounded_solid_white">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dip"
                            android:layout_marginTop="15dip"
                            android:layout_marginBottom="10dip"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tv_orderdetail_type"
                                android:textColor="#333333"
                                android:textSize="14sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/tv_orderdetail_person"
                                android:layout_marginTop="10dip"
                                android:textSize="12sp"
                                android:textColor="#333333"
                                android:text="0人"
                                android:drawableLeft="@mipmap/ic_order_member"
                                android:drawablePadding="7dip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/tv_orderdetail_priceall"
                                android:layout_marginTop="10dip"
                                android:textSize="12sp"
                                android:textColor="#333333"
                                android:drawableLeft="@mipmap/ic_order_money"
                                android:drawablePadding="7dip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dip"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dip"
                                    android:src="@mipmap/ic_order_time"/>
                                <TextView
                                    android:id="@+id/tv_orderdetail_time"
                                    android:layout_marginStart="7dip"
                                    android:textSize="12sp"
                                    android:textColor="#333333"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="15dip"
                            android:layout_marginEnd="12dip"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_orderdetail_price"
                                android:textSize="20sp"
                                android:textColor="#f97b4f"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/tv_orderdetail_price_type"
                                android:textSize="11sp"
                                android:textColor="#f97b4f"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dip"
                        android:background="#999999">

                    </View>
                    <RelativeLayout
                        android:id="@+id/layout_orderdetail_employerinfo"
                        android:layout_width="match_parent"
                        android:layout_height="35dip">
                        <com.facebook.drawee.view.SimpleDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/iv_orderdetail_logo"
                            android:layout_width="20dip"
                            android:layout_height="20dip"
                            android:layout_marginStart="12dip"
                            android:layout_centerVertical="true"
                            fresco:roundAsCircle="false"
                            fresco:roundedCornerRadius="5dp"
                            fresco:roundingBorderWidth="0.5dp"
                            fresco:roundingBorderColor="#999999"
                            fresco:placeholderImage="@mipmap/ic_avatar"
                            fresco:placeholderImageScaleType="centerCrop"
                            fresco:retryImage="@mipmap/ic_avatar"
                            fresco:retryImageScaleType="focusCrop"
                            fresco:failureImage="@mipmap/ic_avatar"
                            fresco:failureImageScaleType="focusCrop"/>
                        <TextView
                            android:id="@+id/tv_orderdetail_comp"
                            android:layout_toRightOf="@id/iv_orderdetail_logo"
                            android:textColor="#999999"
                            android:textSize="12sp"
                            android:layout_marginStart="7dip"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_orderdetail_orderid"
                            android:textColor="#999999"
                            android:textSize="12sp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="12dip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_orderdetail_info2"
                    android:layout_below="@id/layout_orderdetail_info1"
                    android:layout_marginEnd="12dip"
                    android:layout_marginStart="12dip"
                    android:layout_marginTop="12dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_rounded_solid_white"
                    android:orientation="vertical">
                    <TextView
                        android:text="工作描述"
                        android:layout_marginStart="12dip"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="30dip" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dip"
                        android:background="#999999">

                    </View>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:orientation="horizontal">
                        <TextView
                            android:text="工作地点"
                            android:layout_marginStart="12dip"
                            android:textSize="12sp"
                            android:textColor="#333333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_orderdetail_address"
                            android:layout_marginStart="20dip"
                            android:textSize="12sp"
                            android:textColor="#333333"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:orientation="horizontal">
                        <TextView
                            android:text="性别要求"
                            android:layout_marginStart="12dip"
                            android:textSize="12sp"
                            android:textColor="#333333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_orderdetail_sex"
                            android:layout_marginStart="20dip"
                            android:textSize="12sp"
                            android:textColor="#333333"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:orientation="horizontal">
                        <TextView
                            android:text="结算形式"
                            android:layout_marginStart="12dip"
                            android:textSize="12sp"
                            android:textColor="#333333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_orderdetail_paytype"
                            android:layout_marginStart="20dip"
                            android:textSize="12sp"
                            android:textColor="#333333"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dip"
                        android:layout_marginBottom="10dip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:text="备注信息"
                            android:layout_marginStart="12dip"
                            android:textSize="12sp"
                            android:textColor="#333333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_orderdetail_desp"
                            android:layout_marginStart="20dip"
                            android:textSize="12sp"
                            android:textColor="#333333"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_below="@id/layout_orderdetail_info2"
                    android:id="@+id/layout_orderdetail_info3"
                    android:layout_marginEnd="12dip"
                    android:layout_marginStart="12dip"
                    android:layout_marginTop="12dip"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_rounded_solid_white"
                    android:orientation="vertical">
                    <TextView
                        android:text="雇员"
                        android:layout_marginStart="12dip"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="30dip"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dip"
                        android:background="#999999">

                    </View>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/tv_orderdetail_employeenum_arror"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dip"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/ic_arrow_gray_right"/>
                        <TextView
                            android:id="@+id/tv_orderdetail_employeenum"
                            android:layout_toLeftOf="@id/tv_orderdetail_employeenum_arror"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dip"
                            android:layout_centerVertical="true"
                            android:textSize="12sp"
                            android:textColor="#999999"
                            android:layout_marginRight="12dip" />
                        <LinearLayout
                            android:id="@+id/layout_orderdetail_employer"
                            android:layout_marginEnd="12dip"
                            android:layout_marginStart="12dip"
                            android:layout_marginTop="12dip"
                            android:layout_marginBottom="12dip"
                            android:layout_toLeftOf="@id/tv_orderdetail_employeenum"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
        <LinearLayout
            android:id="@+id/layout_orderdetail_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include layout="@layout/view_nav"></include>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_orderdetail_commit"
            android:text="立即签到"
            android:background="@drawable/shape_rounded_solid_orange"
            android:textColor="@color/colorText1"
            android:layout_marginTop="12dip"
            android:layout_marginEnd="16dip"
            android:layout_marginStart="16dip"
            android:layout_marginBottom="20dip"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_orderdetail_cancel"
            android:text="取消订单"
            android:background="@android:color/transparent"
            android:textColor="@color/colorPrimary"
            android:layout_marginEnd="16dip"
            android:layout_marginStart="16dip"
            android:layout_marginBottom="20dip"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_orderdetail_tip"
            android:layout_marginStart="20dip"
            android:layout_marginEnd="20dip"
            android:layout_marginBottom="20dip"
            android:textSize="10sp"
            android:textColor="#999999"
            android:drawableLeft="@mipmap/ic_releaseorder_tip"
            android:drawablePadding="12dip"
            android:text="接单成功超过1小时后取消订单，将收取一定比例的违约金并可能会影响你的信誉评价，请确认订单!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>