<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2">
    <include layout="@layout/view_nav"></include>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="#999999">

    </View>
    <View
        android:layout_width="match_parent"
        android:layout_height="16dip">

    </View>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dip"
        android:paddingBottom="8dip"
        android:textSize="12sp"
        android:textColor="#999999"
        android:text="发送给:当前订单雇员"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dip">
        <EditText
            android:id="@+id/et_orderbroadcast"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:textColor="#333333"
            android:padding="12dip"
            android:gravity="top|left"
            android:hint="编辑消息"
            android:background="@android:color/white"/>
        <TextView
            android:id="@+id/tv_orderbroadcast_numbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="12dip"
            android:text="0/50"
            android:textSize="13sp"
            android:textColor="#999999" />
    </RelativeLayout>
    <Button
        android:id="@+id/btn_orderbroadcast"
        android:layout_marginTop="70dip"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:background="@drawable/shape_rounded_solid_orange"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_marginEnd="16dip"
        android:layout_marginStart="16dip"
        android:text="发送"/>
</LinearLayout>