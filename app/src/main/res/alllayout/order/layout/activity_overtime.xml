<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2">
    <include layout="@layout/view_nav"></include>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="#999999">

    </View>
    <View
        android:layout_width="match_parent"
        android:layout_height="16dip">

    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/layout_overtime_time"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dip"
                android:textSize="14sp"
                android:textColor="#333333"
                android:text="加班时长"/>
            <TextView
                android:id="@+id/tv_overtime_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dip"
                android:textSize="14sp"
                android:text="0小时"
                android:textColor="#999999" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dip"
                android:src="@mipmap/ic_arrow_gray_right"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_marginStart="12dip"
            android:background="#999999">

        </View>
        <LinearLayout
            android:id="@+id/layout_overtime_money"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dip"
                android:textSize="14sp"
                android:textColor="#333333"
                android:text="加班报酬"/>
            <TextView
                android:id="@+id/tv_overtime_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dip"
                android:textSize="14sp"
                android:text="0元/小时"
                android:textColor="#999999" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dip"
                android:src="@mipmap/ic_arrow_gray_right"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="16dip">

    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dip"
                android:textSize="14sp"
                android:textColor="#333333"
                android:text="加班人数"/>
            <TextView
                android:id="@+id/tv_overtime_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dip"
                android:textSize="14sp"
                android:textColor="#999999" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dip"
                android:visibility="invisible"
                android:src="@mipmap/ic_arrow_gray_right"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_marginStart="12dip"
            android:background="#999999">

        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dip"
                android:textSize="14sp"
                android:textColor="#333333"
                android:text="小费总计"/>
            <TextView
                android:id="@+id/tv_overtime_allmoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dip"
                android:textSize="14sp"
                android:textColor="#999999" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dip"
                android:visibility="invisible"
                android:src="@mipmap/ic_arrow_gray_right"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </View>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dip"
        android:background="@color/colorPrimary">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="20dip"
                android:gravity="right"
                android:orientation="horizontal">
                <TextView
                    android:textSize="14sp"
                    android:gravity="right|center_vertical"
                    android:text="支付总额:  ¥ "
                    android:textColor="@color/colorText1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/tv_overtime_needmoney"
                    android:textSize="14sp"
                    android:gravity="right|center_vertical"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="@color/colorText1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="20dip"
                android:orientation="horizontal">
                <TextView
                    android:textSize="14sp"
                    android:gravity="right|center_vertical"
                    android:text="可用余额:  ¥ "
                    android:textColor="@color/colorText1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/tv_overtime_avaliablemoney"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="@color/colorText1"
                    android:text="0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btn_overtime_commit"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/shape_rounded_solid_white"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:layout_gravity="center"
            android:text="确认加班"
            android:layout_width="match_parent"
            android:layout_height="40dip" />
        <TextView
            android:textColor="@color/colorText1"
            android:text="申请加班前，请先与雇员协商，获同意后方可加班 订单规则 >"
            android:layout_weight="1"
            android:textSize="11sp"
            android:drawableLeft="@mipmap/ic_releaseorder_tip"
            android:drawablePadding="12dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>