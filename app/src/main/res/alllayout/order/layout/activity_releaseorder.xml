<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2">
    <include layout="@layout/view_nav"></include>
    <View
        android:layout_width="match_parent"
        android:layout_height="16dip">

    </View>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/layout_releaseorder_type"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dip"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:text="用工类型"/>
                <TextView
                    android:id="@+id/tv_releaseorder_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="5dip"
                    android:visibility="invisible"
                    android:background="@drawable/shape_rounded_solid_green"
                    android:layout_marginEnd="9dip"
                    android:textSize="14sp"
                    android:textColor="@android:color/white" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dip"
                    android:src="@mipmap/ic_arrow_gray_right"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:layout_marginStart="12dip"
                android:background="#999999">

            </View>
            <LinearLayout
                android:id="@+id/layout_releaseorder_time"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dip"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:text="用工日期"/>
                <TextView
                    android:id="@+id/tv_releaseorder_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_marginEnd="9dip"
                    android:textSize="14sp"
                    android:textColor="#999999" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dip"
                    android:src="@mipmap/ic_arrow_gray_right"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:layout_marginStart="12dip"
                android:background="#999999">

            </View>
            <LinearLayout
                android:id="@+id/layout_releaseorder_worktime"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dip"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:text="工作时间"/>
                <TextView
                    android:id="@+id/tv_releaseorder_worktime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_marginEnd="9dip"
                    android:textSize="14sp"
                    android:textColor="#999999" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dip"
                    android:src="@mipmap/ic_arrow_gray_right"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:layout_marginStart="12dip"
                android:background="#999999">

            </View>
            <LinearLayout
                android:id="@+id/layout_releaseorder_person"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dip"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:text="需求人数"/>
                <TextView
                    android:id="@+id/tv_releaseorder_person"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_marginEnd="9dip"
                    android:textSize="14sp"
                    android:text="0"
                    android:textColor="#999999" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dip"
                    android:src="@mipmap/ic_arrow_gray_right"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:layout_marginStart="12dip"
                android:background="#999999">

            </View>
            <LinearLayout
                android:id="@+id/layout_releaseorder_sex"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dip"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:text="性别要求"/>
                <TextView
                    android:id="@+id/tv_releaseorder_sex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_marginEnd="9dip"
                    android:textSize="14sp"
                    android:textColor="#999999" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dip"
                    android:src="@mipmap/ic_arrow_gray_right"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:layout_marginStart="12dip"
                android:background="#999999">

            </View>
            <LinearLayout
                android:id="@+id/layout_releaseorder_address"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dip"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:text="工作地点"/>
                <TextView
                    android:id="@+id/tv_releaseorder_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_marginEnd="9dip"
                    android:textSize="14sp"
                    android:textColor="#999999" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dip"
                    android:src="@mipmap/ic_arrow_gray_right"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:layout_marginStart="12dip"
                android:background="#999999">

            </View>
            <LinearLayout
                android:id="@+id/layout_releaseorder_desp"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dip"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:text="详细描述"/>
                <TextView
                    android:id="@+id/tv_releaseorder_desp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_marginEnd="9dip"
                    android:textSize="14sp"
                    android:textColor="#999999" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dip"
                    android:src="@mipmap/ic_arrow_gray_right"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="16dip"
                android:background="#f2f2f2">

            </View>
            <LinearLayout
                android:id="@+id/layout_releaseorder_price"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dip"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:text="工作报酬"/>
                <TextView
                    android:id="@+id/tv_releaseorder_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_marginEnd="9dip"
                    android:textSize="14sp"
                    android:textColor="#999999" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dip"
                    android:src="@mipmap/ic_arrow_gray_right"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:layout_marginStart="12dip"
                android:background="#999999">

            </View>
            <LinearLayout
                android:id="@+id/layout_releaseorder_paytype"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dip"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:text="结算方式"/>
                <TextView
                    android:id="@+id/tv_releaseorder_paytype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_marginEnd="9dip"
                    android:textSize="14sp"
                    android:textColor="#999999" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dip"
                    android:src="@mipmap/ic_arrow_gray_right"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:layout_marginStart="12dip"
                android:background="#999999">

            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dip"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:text="接单确认"/>
                <com.kyleduo.switchbutton.SwitchButton
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/sb_releaseorder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:layout_marginTop="3dip"
                    app:kswAnimationDuration="300"
                    app:kswBackDrawable="@drawable/ios_back_drawable"
                    app:kswBackMeasureRatio="1.4"
                    app:kswThumbDrawable="@drawable/ios_thumb_selector"
                    app:kswThumbMarginBottom="-8dp"
                    app:kswThumbMarginLeft="-5dp"
                    app:kswThumbMarginRight="-5dp"
                    app:kswThumbMarginTop="-2.5dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="16dip">

    </View>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dip"
        android:background="@color/colorPrimary">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="20dip"
                android:gravity="right"
                android:orientation="horizontal">
                <TextView
                    android:textSize="14sp"
                    android:gravity="right|center_vertical"
                    android:text="支付总额:  ¥ "
                    android:textColor="@color/colorText1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/tv_releaseorder_needmoney"
                    android:textSize="14sp"
                    android:gravity="right|center_vertical"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="@color/colorText1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="20dip"
                android:orientation="horizontal">
                <TextView
                    android:textSize="14sp"
                    android:gravity="right|center_vertical"
                    android:text="可用余额:  ¥ "
                    android:textColor="@color/colorText1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/tv_releaseorder_avaliablemoney"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="@color/colorText1"
                    android:text="0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btn_releaseorder_commit"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/shape_rounded_solid_white"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:layout_gravity="center"
            android:text="确认发布"
            android:layout_width="match_parent"
            android:layout_height="40dip" />
        <TextView
            android:textColor="@color/colorText1"
            android:text="发布成功超过1小时后取消订单，将收取一定比例的违约金并可能会影响你的信誉评价，请确认订单"
            android:layout_weight="1"
            android:textSize="11sp"
            android:drawableLeft="@mipmap/ic_releaseorder_tip"
            android:drawablePadding="12dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>