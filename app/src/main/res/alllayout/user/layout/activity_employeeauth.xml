<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2">
    <include layout="@layout/view_nav"></include>
    <View
        android:layout_width="match_parent"
        android:layout_height="16dip">

    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">
        <LinearLayout
            android:id="@+id/layout_userauth_name"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dip"
                android:textSize="14sp"
                android:textColor="#333333"
                android:text="真实姓名"/>
            <TextView
                android:id="@+id/tv_userauth_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="1"
                android:layout_marginEnd="9dip"
                android:textSize="14sp"
                android:textColor="#999999" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dip"
                android:src="@mipmap/ic_arrow_gray_right"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_marginStart="12dip"
            android:background="#999999">

        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dip"
                android:textSize="14sp"
                android:textColor="#333333"
                android:text="身份证号"/>
            <TextView
                android:id="@+id/tv_userauth_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="1"
                android:layout_marginEnd="9dip"
                android:textSize="14sp"
                android:textColor="#999999" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dip"
                android:src="@mipmap/ic_arrow_gray_right"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_marginStart="12dip"
            android:background="#999999">

        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dip"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dip"
                android:layout_marginTop="12dip"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textColor="#333333"
                android:text="证件照片"/>
            <RelativeLayout
                android:id="@+id/layout_userauth_positive"
                android:layout_width="55dip"
                android:layout_height="55dip"
                android:layout_marginEnd="9dip"
                android:layout_gravity="center_vertical">
                <com.facebook.drawee.view.SimpleDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/iv_userauth_positive"
                    android:layout_width="55dip"
                    android:layout_height="55dip"
                    android:layout_centerInParent="true"
                    fresco:roundAsCircle="false"
                    fresco:roundedCornerRadius="5dp"
                    fresco:roundingBorderWidth="0.5dip"
                    fresco:roundingBorderColor="#999999"
                    fresco:placeholderImage="@drawable/shape_rounded_solid_stroke_white"
                    fresco:placeholderImageScaleType="centerCrop"
                    fresco:retryImage="@drawable/shape_rounded_solid_stroke_white"
                    fresco:retryImageScaleType="focusCrop"
                    fresco:failureImage="@drawable/shape_rounded_solid_stroke_white"
                    fresco:failureImageScaleType="focusCrop"/>
                <TextView
                    android:id="@+id/tv_userauth_positive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="正面照片"
                    android:textColor="#35abdc"
                    android:textSize="12sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_userauth_negative"
                android:layout_width="55dip"
                android:layout_height="55dip"
                android:layout_marginEnd="12dip"
                android:layout_gravity="center_vertical">
                <com.facebook.drawee.view.SimpleDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/iv_userauth_negative"
                    android:layout_width="55dip"
                    android:layout_height="55dip"
                    android:layout_centerInParent="true"
                    fresco:roundAsCircle="false"
                    fresco:roundedCornerRadius="5dp"
                    fresco:roundingBorderWidth="0.5dp"
                    fresco:roundingBorderColor="#999999"
                    fresco:placeholderImage="@drawable/shape_rounded_solid_stroke_white"
                    fresco:placeholderImageScaleType="centerCrop"
                    fresco:retryImage="@drawable/shape_rounded_solid_stroke_white"
                    fresco:retryImageScaleType="focusCrop"
                    fresco:failureImage="@drawable/shape_rounded_solid_stroke_white"
                    fresco:failureImageScaleType="focusCrop"/>
                <TextView
                    android:id="@+id/tv_userauth_negative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="反面照片"
                    android:textColor="#35abdc"
                    android:textSize="12sp"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_userauth_commit"
        android:text="立即认证"
        android:background="@drawable/shape_rounded_solid_orange"
        android:textColor="@android:color/white"
        android:layout_marginEnd="16dip"
        android:layout_marginStart="16dip"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="60dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>