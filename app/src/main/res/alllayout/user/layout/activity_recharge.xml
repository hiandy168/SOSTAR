<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <include layout="@layout/view_nav"></include>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="28dip"
            android:textSize="12sp"
            android:textColor="#999999"
            android:text="充值金额"
            android:paddingLeft="12dip"
            android:gravity="center_vertical"
            android:background="#f2f2f2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:gravity="center_vertical">
            <TextView
                android:text="¥"
                android:textColor="#333333"
                android:textSize="25sp"
                android:layout_marginLeft="12dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/ed_recharge_money"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:textColor="#333333"
                android:inputType="number"
                android:singleLine="true"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:textSize="25sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_recharge_lastmoney"
            android:layout_width="match_parent"
            android:layout_height="28dip"
            android:textSize="12sp"
            android:textColor="#999999"
            android:text="可用余额: 0"
            android:paddingRight="12dip"
            android:gravity="center_vertical|right"
            android:background="#f2f2f2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="28dip"
            android:textSize="12sp"
            android:textColor="#999999"
            android:text="充值方式"
            android:paddingLeft="12dip"
            android:gravity="center_vertical"
            android:background="#f2f2f2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:gravity="center_vertical"
            android:background="@android:color/white"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dip"
                android:src="@mipmap/ic_alipay"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_recharge_protocal"
            android:layout_width="match_parent"
            android:layout_height="28dip"
            android:textSize="12sp"
            android:textColor="#999999"
            android:text="请以实际到账时间为准  参见《开工啦钱包使用规则》"
            android:paddingLeft="12dip"
            android:gravity="center_vertical"
            android:background="#f2f2f2"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_recharge_commit"
        android:text="充值"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_rounded_solid_green"
        android:textColor="@color/colorText1"
        android:layout_marginEnd="16dip"
        android:layout_marginStart="16dip"
        android:layout_marginBottom="20dip"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>