<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2">
    <include layout="@layout/view_nav"></include>
    <View
        android:layout_width="match_parent"
        android:layout_height="16dip">

    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">
        <LinearLayout
            android:id="@+id/layout_employerinfo_avatar"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dip"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textColor="#333333"
                android:text="头像"/>
            <com.facebook.drawee.view.SimpleDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:id="@+id/iv_employerinfo_avatar"
                android:layout_width="27dip"
                android:layout_height="27dip"
                android:layout_marginEnd="12dip"
                fresco:roundedCornerRadius="10dp"
                fresco:roundingBorderWidth="1dp"
                fresco:roundingBorderColor="#999999"
                fresco:placeholderImage="@mipmap/ic_avatar_small"
                fresco:placeholderImageScaleType="centerCrop"
                fresco:retryImage="@mipmap/ic_avatar_small"
                fresco:retryImageScaleType="focusCrop"
                fresco:failureImage="@mipmap/ic_avatar_small"
                fresco:failureImageScaleType="focusCrop"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dip"
                android:src="@mipmap/ic_arrow_gray_right"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_marginStart="12dip"
            android:background="#999999">

        </View>
        <LinearLayout
            android:id="@+id/layout_employerinfo_name"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dip"
                android:textSize="14sp"
                android:textColor="#333333"
                android:text="企业名称"/>
            <TextView
                android:id="@+id/tv_employerinfo_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="1"
                android:layout_marginEnd="9dip"
                android:textSize="14sp"
                android:textColor="#999999" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dip"
                android:src="@mipmap/ic_arrow_gray_right"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_marginStart="12dip"
            android:background="#999999">

        </View>
        <LinearLayout
            android:id="@+id/layout_employerinfo_phone"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dip"
                android:textSize="14sp"
                android:textColor="#333333"
                android:text="联系方式"/>
            <TextView
                android:id="@+id/tv_employerinfo_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="1"
                android:layout_marginEnd="9dip"
                android:textSize="14sp"
                android:textColor="#999999" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dip"
                android:src="@mipmap/ic_arrow_gray_right"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_marginStart="12dip"
            android:background="#999999">

        </View>
        <LinearLayout
            android:id="@+id/layout_employerinfo_web"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dip"
                android:textSize="14sp"
                android:textColor="#333333"
                android:text="公司网站"/>
            <TextView
                android:id="@+id/tv_employerinfo_web"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="1"
                android:layout_marginEnd="9dip"
                android:textSize="14sp"
                android:textColor="#999999" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dip"
                android:src="@mipmap/ic_arrow_gray_right"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_marginStart="12dip"
            android:background="#999999">

        </View>
        <LinearLayout
            android:id="@+id/layout_employerinfo_auth"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dip"
                android:textSize="14sp"
                android:textColor="#333333"
                android:text="认证"/>
            <TextView
                android:id="@+id/tv_employerinfo_auth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="1"
                android:layout_marginEnd="3dip"
                android:textSize="14sp"
                android:textColor="#999999" />
            <ImageView
                android:id="@+id/iv_employerinfo_auth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dip"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dip"
                android:src="@mipmap/ic_arrow_gray_right"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_marginStart="12dip"
            android:background="#999999">

        </View>
        <LinearLayout
            android:id="@+id/layout_employerinfo_summary"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dip"
                android:textSize="14sp"
                android:textColor="#333333"
                android:text="简介"/>
            <TextView
                android:id="@+id/tv_employerinfo_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="1"
                android:layout_marginEnd="9dip"
                android:textSize="14sp"
                android:textColor="#999999" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dip"
                android:src="@mipmap/ic_arrow_gray_right"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="16dip"
        android:background="#f2f2f2">

    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dip"
                android:textSize="14sp"
                android:textColor="#333333"
                android:text="星级评价"/>
            <TextView
                android:id="@+id/tv_employerinfo_evaluate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="1"
                android:layout_marginEnd="12dip"
                android:textSize="14sp"
                android:textColor="#999999" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_marginStart="12dip"
            android:background="#999999">

        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dip"
                android:textSize="14sp"
                android:textColor="#333333"
                android:text="完成率"/>
            <TextView
                android:id="@+id/tv_employerinfo_completionrate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="1"
                android:layout_marginEnd="12dip"
                android:textSize="14sp"
                android:textColor="#999999" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>